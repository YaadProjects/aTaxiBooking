<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_wish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/default_wallpaper">

    <include layout="@layout/item_title"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvTitle"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        app:cardCornerRadius="@dimen/card_view_corner_radius">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/confirmation_image"
                android:layout_height="@dimen/confirmation_image"
                android:id="@+id/ivWishActivityValueAddition"
                android:src="@mipmap/ic_conformation"
                android:padding="@dimen/confirmation_image_margin"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Увеличение стоимости"
                    android:id="@+id/tWishActivityValueAddition" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Заказы с увеличенной стоимостью привлекательне для водителей, а значит автомобиль приедет быстрее"
                    android:id="@+id/tvWishActivityValueAdditionDescription"/>
            </LinearLayout>
            <Spinner
                android:id="@+id/spWishActivityValueAddition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>
