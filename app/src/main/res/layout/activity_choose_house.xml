<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/mapChooseHouse"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.toptaxi.ataxibooking.org.toptaxi.ataxibooking.activities.ChooseHouseActivity" />

    <include layout="@layout/item_title"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:background="@color/alpha"
        android:layout_below="@+id/cvTitle">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <EditText
                android:id="@+id/edChooseHouseActivityHouseNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Номер дома"
                android:inputType="numberSigned" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <EditText
                android:id="@+id/edChooseHouseActivityHouseSplash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Строение"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


</RelativeLayout>
